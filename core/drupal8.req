import sys
import yaml


def main():
    paths = [path.rstrip() for path in sys.stdin.readlines()]
    deps  = ['core']

    for path in paths:
        if not path.endswith('.info.yml'):
            continue

        file = open(path, 'r')
        info = yaml.safe_load(file)
        file.close()

        if 'dependencies' in info:
            for dep in info['dependencies']:
                if dep not in deps:
                    deps.append(dep)

    for dep in deps:
        print 'drupal8(' + dep + ')'


if __name__ == '__main__':
    main()
